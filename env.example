# UniMatch Application Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==================== SUPABASE CONFIGURATION ====================
# Supabase Project URL (found in your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (found in your Supabase dashboard > Settings > API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (for server-side operations - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==================== DATABASE CONFIGURATION ====================
# Database connection string (if using direct connection)
DATABASE_URL=postgresql://postgres:password@localhost:5432/unimatch

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ==================== APPLICATION CONFIGURATION ====================
# Application environment
NODE_ENV=development

# Application URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application name
NEXT_PUBLIC_APP_NAME=UniMatch

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==================== AUTHENTICATION CONFIGURATION ====================
# JWT Secret for token signing (generate a strong secret)
JWT_SECRET=your-jwt-secret-here

# Session configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400

# Password reset token expiry (in seconds)
PASSWORD_RESET_EXPIRY=3600

# Email verification token expiry (in seconds)
EMAIL_VERIFICATION_EXPIRY=3600

# ==================== EMAIL CONFIGURATION ====================
# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email templates
EMAIL_FROM_NAME=UniMatch Team
EMAIL_FROM_ADDRESS=noreply@unimatch.co.za

# ==================== FILE UPLOAD CONFIGURATION ====================
# File upload settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Storage configuration (if using cloud storage)
STORAGE_BUCKET=unimatch-uploads
STORAGE_REGION=af-south-1

# ==================== CACHE CONFIGURATION ====================
# Redis configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ==================== LOGGING CONFIGURATION ====================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/app.log

# Enable console logging
ENABLE_CONSOLE_LOGGING=true

# ==================== SECURITY CONFIGURATION ====================
# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,https://unimatch.co.za

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# ==================== ANALYTICS CONFIGURATION ====================
# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ==================== MONITORING CONFIGURATION ====================
# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic for performance monitoring (optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ==================== PAYMENT CONFIGURATION ====================
# Payment gateway configuration (if implementing payments)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==================== NOTIFICATION CONFIGURATION ====================
# Push notification service (optional)
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# SMS service configuration (optional)
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== DEVELOPMENT CONFIGURATION ====================
# Enable debug mode
DEBUG=true

# Enable hot reload
HOT_RELOAD=true

# Mock data configuration
USE_MOCK_DATA=true
MOCK_DATA_PATH=./src/data/mockData.ts

# ==================== PRODUCTION CONFIGURATION ====================
# Production-specific settings
PRODUCTION_URL=https://unimatch.co.za
PRODUCTION_CDN_URL=https://cdn.unimatch.co.za

# SSL configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ==================== TESTING CONFIGURATION ====================
# Test database URL
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/unimatch_test

# Test environment
NODE_ENV=test

# ==================== DEPLOYMENT CONFIGURATION ====================
# Vercel deployment (if using Vercel)
VERCEL_URL=your-app.vercel.app

# Docker configuration
DOCKER_IMAGE_NAME=unimatch
DOCKER_TAG=latest

# ==================== FEATURE FLAGS ====================
# Enable/disable features
NEXT_PUBLIC_ENABLE_REFERENCE_DATA=true
NEXT_PUBLIC_ENABLE_STUDENT_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_COURSE_QUALIFICATION=true
NEXT_PUBLIC_ENABLE_APPLICATION_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_OFFER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_ROOMMATE_MATCHING=true
NEXT_PUBLIC_ENABLE_BURSARY_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_CAREER_PLANNING=true

# ==================== API CONFIGURATION ====================
# API version
API_VERSION=v1

# API rate limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600000

# API documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# ==================== DATABASE MIGRATION ====================
# Migration settings
AUTO_MIGRATE=true
MIGRATION_PATH=./supabase/migrations

# Seed data configuration
SEED_REFERENCE_DATA=true
SEED_SAMPLE_STUDENTS=true
SEED_SAMPLE_APPLICATIONS=true

# ==================== BACKUP CONFIGURATION ====================
# Database backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ==================== NOTIFICATION SETTINGS ====================
# Email notification settings
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_EMAIL_TEMPLATES_PATH=./src/templates/emails

# Push notification settings
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_NOTIFICATION_VAPID_KEY=your-vapid-key

# ==================== CUSTOM CONFIGURATION ====================
# Custom application settings
DEFAULT_PAGE_SIZE=20
MAX_SEARCH_RESULTS=100
CACHE_REFERENCE_DATA=true
ENABLE_REAL_TIME_UPDATES=true

# Custom branding
NEXT_PUBLIC_APP_LOGO_URL=https://unimatch.co.za/logo.png
NEXT_PUBLIC_APP_FAVICON_URL=https://unimatch.co.za/favicon.ico
NEXT_PUBLIC_PRIMARY_COLOR=#3B82F6
NEXT_PUBLIC_SECONDARY_COLOR=#1E40AF

# ==================== INTEGRATION SETTINGS ====================
# Third-party integrations
NEXT_PUBLIC_ENABLE_GOOGLE_INTEGRATION=false
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

NEXT_PUBLIC_ENABLE_FACEBOOK_INTEGRATION=false
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ==================== LEGAL CONFIGURATION ====================
# Terms of service and privacy policy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://unimatch.co.za/terms
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://unimatch.co.za/privacy
NEXT_PUBLIC_COOKIE_POLICY_URL=https://unimatch.co.za/cookies

# ==================== SUPPORT CONFIGURATION ====================
# Support and contact information
NEXT_PUBLIC_SUPPORT_EMAIL=support@unimatch.co.za
NEXT_PUBLIC_SUPPORT_PHONE=+27 11 123 4567
NEXT_PUBLIC_SUPPORT_HOURS=Monday-Friday 9AM-5PM SAST

# ==================== MAINTENANCE CONFIGURATION ====================
# Maintenance mode settings
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing scheduled maintenance. Please check back soon.

# ==================== PERFORMANCE CONFIGURATION ====================
# Performance optimization settings
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_MINIFICATION=true
NEXT_PUBLIC_ENABLE_TREE_SHAKING=true
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true

# Image optimization
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMATS=webp,avif,jpeg,png

# ==================== SEO CONFIGURATION ====================
# SEO settings
NEXT_PUBLIC_SITE_NAME=UniMatch
NEXT_PUBLIC_SITE_DESCRIPTION=South Africa's premier university matching platform
NEXT_PUBLIC_SITE_KEYWORDS=university,education,South Africa,student,application
NEXT_PUBLIC_SITE_AUTHOR=UniMatch Team
NEXT_PUBLIC_SITE_URL=https://unimatch.co.za

# Social media
NEXT_PUBLIC_TWITTER_HANDLE=@UniMatchSA
NEXT_PUBLIC_FACEBOOK_PAGE=https://facebook.com/unimatchsa
NEXT_PUBLIC_LINKEDIN_PAGE=https://linkedin.com/company/unimatchsa

# ==================== ENVIRONMENT SPECIFIC ====================
# Development environment
DEV_PORT=3000
DEV_HOST=localhost
DEV_HTTPS=false

# Staging environment
STAGING_URL=https://staging.unimatch.co.za
STAGING_DATABASE_URL=postgresql://postgres:password@staging-db:5432/unimatch

# Production environment
PROD_URL=https://unimatch.co.za
PROD_DATABASE_URL=postgresql://postgres:password@prod-db:5432/unimatch
